<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_width="match_parent"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:id="@+id/CarView"
    android:layout_width="150dp"
    app:cardCornerRadius="8dp"
    android:layout_height="150dp">
    <ImageView
        android:id="@+id/imageView"

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avata_truong" />
</androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="10dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/CarView">
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center|fill_vertical"
                android:text=" Tour tham quan bốn hòn đảo ở Nam Phú Quốc - 1 ngày"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/titleTour"
                android:layout_marginTop="5dp"
                android:text="Dnh gia"
                android:textAlignment="center"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/evaluateTour"
                android:layout_marginTop="8dp"
                android:text="địa điểm"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/locationTour"
                android:text="giá cả"
                android:textStyle="italic" />

        </LinearLayout>
    </RelativeLayout>




</androidx.cardview.widget.CardView>